<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="4.0">

    <listener>
        <listener-class>com.company.crm.web.listener.AppContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.company.crm.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ObjectServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.ObjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ObjectServlet</servlet-name>
        <url-pattern>/object</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdditionalConditionServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.AdditionalConditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdditionalConditionServlet</servlet-name>
        <url-pattern>/additionalCondition</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DealServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.DealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DealServlet</servlet-name>
        <url-pattern>/deal</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MeetingServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.MeetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeetingServlet</servlet-name>
        <url-pattern>/meeting</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PhotoServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.PhotoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhotoServlet</servlet-name>
        <url-pattern>/photo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.TaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/task</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>