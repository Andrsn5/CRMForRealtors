<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="4.0">

    <!-- Добавьте параметр контекста для кодировки -->
    <context-param>
        <param-name>characterEncoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <listener>
        <listener-class>com.company.crm.web.listener.AppContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.company.crm.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- MyTaskServlet для просмотра деталей задачи -->
    <servlet>
        <servlet-name>MyTaskServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.user.MyTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyTaskServlet</servlet-name>
        <url-pattern>/task</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.TaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/adminTask</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ObjectServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.ObjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ObjectServlet</servlet-name>
        <url-pattern>/object</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdditionalConditionServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.AdditionalConditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdditionalConditionServlet</servlet-name>
        <url-pattern>/additionalCondition</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DealServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.DealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DealServlet</servlet-name>
        <url-pattern>/deal</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MeetingServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.MeetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeetingServlet</servlet-name>
        <url-pattern>/meeting</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PhotoServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.PhotoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhotoServlet</servlet-name>
        <url-pattern>/photo</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.company.crm.web.listener.AppConfigListener</listener-class>
    </listener>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.company.crm.web.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.company.crm.web.servlet.admin.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>